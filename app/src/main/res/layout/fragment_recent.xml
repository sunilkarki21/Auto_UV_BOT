<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UVC Autonomous Disinfection Robot"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assign New Task"
        android:id="@+id/buttonNewTask"
        android:onClick="buttonNewTask"
        android:textColor="#000"

        android:backgroundTint="#0088cc"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/buttonViewTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonViewTask"
        android:text="View Completion Task"
        android:textColor="#000"
        android:textSize="20sp"
        android:backgroundTint="#0088cc"

        />



</LinearLayout>